<h1 style = "text-align:center">Discussion Page</h1>
<% if @curruser %>
<h2 style = "text-align:center">Hi welcome to game discussion forum <%=  @curruser.name %></h2>
<%end %>

  
<div class="d-flex justify-content-center">
    <%= link_to "Add Topic", addtopic_path, class:"btn btn-lg btn-warning" %>
</div>


<div id="exTab2" class="container">	
<ul class="nav nav-tabs">
			<li class="active">
        <a  href="#1" data-toggle="tab">Rate the game</a>
			</li>
			<li><a href="#2" data-toggle="tab">Game strategy</a>
			</li>
			<li><a href="#3" data-toggle="tab">Question about game</a>
           
		</ul>

			<div class="tab-content ">
			  <div class="tab-pane active" id="1">
             
              <% Topic.where(topictype: "Rate the game").each do |topic| %>
                <div class="gs-row-2-col">
                <div class="gs card">
                  <% if topic.topic_image.blank? %>
                    <%= image_tag("defaultgame.png", :height =>"180", :width => "260")%>
                  <% else %>
                      <%= image_tag(topic.topic_image, :height =>"180", :width => "260")%>
                  <% end %>
                  <div class="gs card-body">
                    <h3 class="gs card-title"><%= topic.name %></h3>
                    <% if topic.description.blank? %>
                      <h4 class="gs card-text">No description</h4>
                    <% else %>
                      <h4 class="gs card-text"><%= topic.description %></h4>
                    <% end %>
                    <%= link_to "Join", joindiscuss_url(topic.id), class: "btn-card" %>
                    
                  </div>
                </div>
              </div>
              <% end %>
				</div>
                <div class="tab-pane" id="2"> 
                    <% Topic.where(topictype: "Game strategy").each do |topic| %>
                        <div class="gs-row-2-col">
                        <div class="gs card">
                          <% if topic.topic_image.blank? %>
                            <%= image_tag("defaultgame.png", :height =>"180", :width => "260")%>
                          <% else %>
                              <%= image_tag(topic.topic_image, :height =>"180", :width => "260")%>
                          <% end %>
                          <div class="gs card-body">
                            <h3 class="gs card-title"><%= topic.name %></h3>
                            <% if topic.description.blank? %>
                              <h4 class="gs card-text">No description</h4>
                            <% else %>
                              <h4 class="gs card-text"><%= topic.description %></h4>
                            <% end %>
                            <%= link_to "Join", joindiscuss_url(topic.id), class: "btn-card" %>
                            
                          </div>
                        </div>
                      </div>
                    <% end %>
				</div>
            <div class="tab-pane" id="3">
           
            <% Topic.where(topictype: "Questions about the Game").each do |topic| %>
                <div class="gs-row-2-col">
                <div class="gs card">
                  <% if topic.topic_image.blank? %>
                    <%= image_tag("defaultgame.png", :height =>"180", :width => "260")%>
                  <% else %>
                      <%= image_tag(topic.topic_image, :height =>"180", :width => "260")%>
                  <% end %>
                  <div class="gs card-body">
                    <h3 class="gs card-title"><%= topic.name %></h3>
                    <% if topic.description.blank? %>
                      <h4 class="gs card-text">No description</h4>
                    <% else %>
                      <h4 class="gs card-text"><%= topic.description %></h4>
                    <% end %>
                    <%= link_to "Join", joindiscuss_url(topic.id), class: "btn-card" %>
                    
                  </div>
                </div>
              </div>
            <% end %>
            </div>
           
           
			</div>
  </div>



