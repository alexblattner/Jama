<%= stylesheet_link_tag 'creategame' %>

<div class="container">
  <h1>Create a New Game</h1>
    <%= form_with(model: game, local: true) do |form| %>
      <!-- Validation check -->
      <% if game.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>
          <ul>
            <% game.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <!-- Input fields-->
      <div>
        <%= form.label :game_name %>
        <%= form.text_field :game_name, class: 'form-control' %>
      </div>
      <%= form.label :description %>
      <%= form.text_field :description, class: 'form-control'  %>
      <%= form.label :game_image %>
      <%= form.file_field :game_image, class: 'form-control'%>
      <!-- Submit Button-->
      <%= form.submit "Create the game", class: "btn btn-dark" %>
</div>

<% end %>

