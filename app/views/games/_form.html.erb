<%= stylesheet_link_tag 'creategame' %>
<html>
  <head>
    <title>Create Your Game</title>
  </head>

  <body>
    <div class="container">
    
      <div>
        <h1>Create a New Game</h1>
      </div>
      
      <div>
        <%= form_with(model: game, local: true) do |form| %>
          <!-- Validation check -->
          <% if game.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>
              <ul>
                <% game.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <!-- Input fields-->
          <div>
            <%= form.label 'Enter game name' %>
            <%= form.text_field :game_name, class: 'form-control' %>
          </div>
          <div>
            <%= form.label 'Write a brief description of this game:' %>
            <%= form.text_field :description, class: 'form-control'  %>
          </div>
          <div>
            <%= form.label 'Upload a cover image of this game:' %>
            <%= form.file_field :game_image, class: 'form-control'%>
          </div>
          <!-- Submit Button-->
          <div>
            <%= form.submit "Create the game", class: "btn-creategame" %>
          </div>
        <% end %>
      </div>

    </div>

  </body>
<html>
