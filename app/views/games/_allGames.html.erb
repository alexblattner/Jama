<% @games.each do |game| %>
  <div class="gs-row-2-col">
      <div class="card">
        <% if game.game_image.blank? %>
          <%= image_tag("defaultgame.png", :height =>"180", :width => "260") %>
        <% else %>
            <%= image_tag(game.game_image, :height =>"180", :width => "260") %>
        <% end %>
        <div class="card-body">
          <h3 class="card-title"><%= game.game_name %></h3>
          <% if game.description.blank? %>
            <h4 class="card-text">No description</h4>
          <% else %>
            <h4 class="card-text"><%= game.description %></h4>
          <% end %>
          <%= link_to "Play", initiate_url(game.id), class: "btn-card" %>
        </div>
      </div>
    </div>
<% end %>
<%= will_paginate @games%>