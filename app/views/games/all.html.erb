<style>
h4   {color: white;}
p    {color: black;}
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  background-color: rgb(245,245,245)!important;
  max-width: 300px;
  margin: auto;
  text-align: center;
  color: gray;
}

.title {
  color: grey;
  font-size: 18px;
}

.column {
  float: left;
  width: 25%;
  padding: 0 10px;
}

.row {margin: 0 -5px;}

.row:after {
  content: "";
  display: table;
  clear: both;
}

</style>
Your Games
  <div class="row">
 <% @games.each do |game| %>
  <div class="card">
  <% if game.game_image.blank? %>
     <%= link_to(image_tag("picture1.jpg", :height =>"180", :width => "260"), root_path) %>
     
  <% else %>
      <%= link_to(image_tag(game.game_image, :height =>"180", :width => "260"), root_path) %>
  <% end %>
   <div class="card-body">
     <h5 class="card-title"><%= game.game_name %></h5>
     <p class="card-text"><%= game.description %></p>
   </div>
  </div>
 <% end %>

 </div>

