<%= stylesheet_link_tag 'gamecenter' %>

<html>
  <head>
    <title>Game Center</title>
  </head>

  <body>
    <div id="exTab2" class="gs-container">	

      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#1" data-toggle="tab">Your Games</a>
        </li>
        <li>
          <a href="#2" data-toggle="tab">Community Games</a>
        </li>
      </ul>

			<div class="tab-content">
			  <div class="tab-pane active" id="1">
          <div class="gs-row-1">
            <h1>Your Games</h1>
          </div>

          <div class="gs-row-2">

            <div class="gs-row-2-col">
              <div class="gs card">
                <div class="gs card-body">
                  <%= link_to(image_tag("plussign.png", :height =>"250", :width => "250", :class=>"cancelhoverEXP"), creategame_path)%>
                </div>
              </div>
            </div>
            
            <% Game.where(admin_id: session['user_id']).each do |game| %>
            <div class="gs-row-2-col">
              <div class="gs card">
                <% if game.game_image.blank? %>
                  <%= image_tag("defaultgame.png", :height =>"180", :width => "260")%>
                <% else %>
                    <%= image_tag(game.game_image, :height =>"180", :width => "260")%>
                <% end %>
                <div class="gs card-body">
                  <h3 class="gs card-title"><%= game.game_name %></h3>
                  <% if game.description.blank? %>
                    <h4 class="gs card-text">No description</h4>
                  <% else %>
                    <h4 class="gs card-text"><%= game.description %></h4>
                  <% end %>
                  <%= link_to "Play", initiate_url(game.id), class: "btn-card" %>
                  <%= link_to "Continue", initiate_url(game.id), class: "btn-card" %>
                  <%= link_to "Edit", leveldashboard_url(game.id), class: "btn-card" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div> <!-- End of id='1'-->

				<div class="tab-pane" id="2">
          <div class="gs-row-3">
            <h1>Community Games</h1>
            <%= text_field_tag :search, params[:search]%>
          </div>

          <div class="gs-row-2">
            <% @games.each do |game| %>
            <div class="gs-row-2-col">
                <div class="gs card">
                  <% if game.game_image.blank? %>
                    <%= image_tag("defaultgame.png", :height =>"180", :width => "260") %>
                  <% else %>
                      <%= image_tag(game.game_image, :height =>"180", :width => "260") %>
                  <% end %>
                  <div class="gs card-body">
                    <h3 class="gs card-title"><%= game.game_name %></h3>
                    <% if game.description.blank? %>
                      <h4 class="gs card-text">No description</h4>
                    <% else %>
                      <h4 class="gs card-text"><%= game.description %></h4>
                    <% end %>
                    <%= link_to "Play", initiate_url(game.id), class: "btn-card" %>
                    <%= link_to "Continue", initiate_url(game.id), class: "btn-card" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
				</div><!-- End of id='2'-->

			</div> <!-- tab content class-->
    </div> <!-- gs-container class-->

  </body>
 </html>
