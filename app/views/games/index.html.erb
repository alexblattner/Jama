<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Game name</th>
      <th>Start level</th>
      <th>Description</th>
      <th>Admin</th>
      <th>Image url</th>
      <th>Popularity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.game_name %></td>
        <td><%= game.start_level_id %></td>
        <%= image_tag(game.game_image) %>

        <td><%= game.description %></td>
        <td><%= game.admin_id %></td>
        <td><%= game.image_url %></td>
        <td><%= game.popularity %></td>
        <%= image_tag(game.game_image) %>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
