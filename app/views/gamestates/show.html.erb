<div id="game-screen">
	<img id="background-image" src="<%=@level.image%>"/>
	<div id="hero-info"><div><%=@hero.name%></div>
	<div id="health-bar"><span><%=@hero['hp']%></span><div percent="<%=@hero_level_info['hp%']%>"></div></div></div>
	<img id="hero" src="<%=@hero.image%>"/>
	<div id="doors-holder"></div>
</div>
<div class="boxed">
<p>
	<%= @level.description %>
</p>
</div>
<%= form_with(url: "", method: "get") do %>
  <%= label_tag(:user_input, "Do next:") %>
  <%= text_field_tag(:user_input) %>
  <%= submit_tag("Enter") %>
<% end %>
<%= javascript_pack_tag 'game.js' %>