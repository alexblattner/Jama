<% levels = Level.where(game_id: @game_id).order(:id) %>
<% levels.each do |level| %>
        <div class="card">
                <div class="internal"%>
                        <% if level.level_image.blank? %>
                                <%= link_to level.name, startinglevel_path(@game_id, level.id)%>
                        <% else %>
                                <%= link_to(image_tag(level.level_image, :height =>"180", :width => "260"), startinglevel_path(@game_id, level.id)) %>
                        <% end %>
                </div>
                <div class="card-body">
                        <h3 class="card-title"><%= level.name %></h3>
                </div>
        </div>
<% end %>
<br>
<br>
<%= link_to "Return to dashboard", leveldashboard_path(@game_id) %>