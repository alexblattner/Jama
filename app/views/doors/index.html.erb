<p id="notice"><%= notice %></p>

<h1>Doors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Next levels</th>
      <th>Description</th>
      <th>Image</th>
      <th>Result</th>
      <th>Requirement</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doors.each do |door| %>
      <tr>
        <td><%= door.name %></td>
        <td><%= door.next_levels %></td>
        <td><%= door.description %></td>
        <td><%= door.image %></td>
        <td><%= door.result %></td>
        <td><%= door.requirement %></td>
        <td><%= door.game_id %></td>
        <td><%= link_to 'Show', door %></td>
        <td><%= link_to 'Edit', edit_door_path(door) %></td>
        <td><%= link_to 'Destroy', door, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

